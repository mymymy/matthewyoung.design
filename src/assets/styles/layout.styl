html
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%
		
flexbox()
	display: flex
	flex-wrap: nowrap

flexRow()
	flexbox()
	flex-direction: row
	
flexColumn()
	flexbox()
	flex-direction: column
	
flexCenter()
	flexbox()
	justify-content: center
	align-content: center

html
	width: 100%
	height: 100%
	font-size: 24px

line-height = 1.4em
line-height-rem = 1.4rem

.text-area
	width: 86%
	max-width: 32em
	margin: 0 auto

#grid
	flexRow()
	position: absolute
	top: 0
	left: 0
	width: 100vw
	height: 100vh
	margin-bottom: 100vh
	opacity: 0.4
	display: none

	.gutter, .column
		border: 0.5px solid red
		height: 100%

	.gutter
		width: 4vw
		
		&.first, &.last
			width: 7vw
		
	.column
		width: 26%

body
	width: 100%
	height: 100%
	background-color: white
	color: black
	font-weight: 400
	line-height: line-height
	basic()

h1
	font-family: newHero
	font-size: 2.8em
	font-weight: 600
	letter-spacing: -0.04em
	line-height: 0.9
	margin: line-height-rem 0
	
	a:link, a:visited
		color: black
		text-decoration: none
		
h3 
	font-size: 1.2em
	font-weight: 600
	margin: line-height-rem 0

p 
	margin-bottom: line-height
	letter-spacing: -0.015em
	
img
	max-width: 100%
	

	










