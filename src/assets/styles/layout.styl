html
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%
		
flexbox()
	display: flex
	flex-wrap: nowrap

flexRow()
	flexbox()
	flex-direction: row
	
flexColumn()
	flexbox()
	flex-direction: column
	
flexCenter()
	flexbox()
	justify-content: center
	align-content: center

html
	width: 100%
	height: 100%
	font-size: 24px

body-padding = 10vh
line-height = 1.4rem

body
	width: 100%
	height: 100%
	background-color: white
	color: black
	font-family: Baskerville
	font-weight: 400
	line-height: line-height
	overflow-x: scroll
	overflow-y: hidden
	padding: body-padding
	flexRow()
	
nav
	padding-right: "calc(%s + 1vh)" % body-padding
	border-right: 1px solid black
	width: 555px
	flex: none

	h1
		font-family: Johnston
		font-weight: 900
		font-size: 1.5em
		padding-bottom: line-height
		
		a:link, a:visited
			color: black
			text-decoration: none

	p 
		padding-bottom: line-height
		
		a:link, a:visited
			color: grey
			// font-style: italic
		
figure.book-cover
	padding-left: 1vh
	width: 100%
	height: 100%
	flexRow()
	align-items: flex-end
	
	img
		height: 100vh
		margin-bottom: "calc(-1 * %s)" % body-padding
		margin-right: "calc(-1 * %s)" % body-padding

