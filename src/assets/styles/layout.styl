html
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%

html, body
	width: 100%
	height: 100%
	font-size: 24px

body-padding = 5vw
image-wrapper-height = "calc(100vh - calc(2 * %s))" % body-padding

body
	background-color: white
	color: black
	font-family: Baskerville
	line-height: 1.4
	padding: body-padding
		
flex()
	display: flex
	flex-wrap: nowrap

flexRow()
	flex()
	flex-direction: row
	
flexColumn()
	flex()
	flex-direction: column
	
flexCenter()
	flex()
	justify-content: center
	align-content: center
	
section.book-cover
	&.simple
		figure
			div.image-wrapper
				max-height: image-wrapper-height
				width: "calc(calc(%s * 0.757) * 1.435)" % image-wrapper-height
			img
				width: 100%
				margin: -20%

