html
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%
		
flexbox()
	display: flex
	flex-wrap: nowrap

flexRow()
	flexbox()
	flex-direction: row
	
flexColumn()
	flexbox()
	flex-direction: column
	
flexCenter()
	flexbox()
	justify-content: center
	align-content: center

html
	width: 100%
	height: 100%
	font-size: 24px

body-padding = 10vh
line-height = 1.4em
line-height-rem = 1.4rem

body
	width: 100%
	height: 100%
	background-color: white
	color: black
	font-family: Baskerville
	font-weight: 400
	line-height: line-height
	overflow-x: scroll
	overflow-y: hidden
	padding: body-padding
	flexRow()
	
nav
	padding-right: body-padding
	width: 555px
	flex: none
	// border-right: 1px solid black
	// margin-right: body-padding

	h1
		font-family: Johnston
		font-weight: 900
		font-size: 1.5em
		padding-bottom: line-height-rem
		
		a:link, a:visited
			color: black
			text-decoration: none

	p 
		padding-bottom: line-height
		
		a:link, a:visited
			color: grey
			// font-style: italic
		
figure.book-cover
	width: 100%
	height: 100%
	flexRow()
	align-items: flex-end
	
	img
		height: 100vh
		margin-bottom: (-1 * body-padding)
		margin-left: @margin-bottom

figure.text-design
	width: 100%
	height: 100%
	flexRow()
	align-items: flex-end
	
	img
		height: 100vh
		margin-bottom: (-1 * body-padding)
		margin-left: @margin-bottom

figure.website
	padding-right: body-padding
	
	.browser
		width: 70vw
		height: (100vh - 2 * body-padding)
		border: browser-border = 1px solid black
		border-radius: 10px 10px 0 0
		box-shadow: 25px 25px 50px rgba(black, 0.25)

		ui-height = 50px
		
		.ui
			width: 100%
			height: ui-height
			padding: 15px
			flexRow()
			align-items: center
			border-bottom: browser-border
			
			.button
				width: 12px
				height: @width
				border-radius: 100%
				border: browser-border
				margin-right: @width
			
			a:link, a:visited
				color: black
				text-decoration: none

			.url
				font-size: 0.6em
				line-height: 1em
				font-family: System
					
		iframe
			width: 100%
			height: "calc(100% - %s)" % ui-height
