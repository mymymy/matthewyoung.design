html, body
	width: 100vw
	
col = calc((100vw - 13em) / 12)

grid-12()
	display: grid
	grid-template-columns: repeat(12, 1fr)
	grid-gap: 10px
	
	+square()
		grid-gap: 1em
		
grid-8()
	display: grid
	grid-template-columns: repeat(8, 1fr)
	grid-gap: 10px
	
	+square()
		grid-gap: 1em
		
grid-4()
	display: grid
	grid-template-columns: repeat(4, 1fr)
	grid-gap: 10px
	
	+square()
		grid-gap: 1em
		
grid-2()
	display: grid
	grid-template-columns: repeat(2, 1fr)
	grid-gap: 10px
	
	+square()
		grid-gap: 1em
						
body
	grid-12()
	width: 100%
	padding: 1em 5vw
	
	+landscape()
		padding: 1em 2em 2em 2em
	
	background: white
	color: black
	fontSmoothing()
	
header
	grid-column: 1 / span 12
	grid-12()
	align-items: baseline
	height: 20vh
		
	h1, h2
		grid-column: 1 / span 9
		
	div
		grid-column: 10 / span 3
		text-align: right

figure img
	max-width: 100% // Make images width of div
	
	@media(min-height: 500px)
		max-height: calc(100vh - 8em) // Make image no taller than screen, but only on screens taller than 500px
		
.keyline
	border: 1px solid rgba(black, 0.1)

nav#prev-and-next
	margin-top: 3em
	grid-column: 1 / span 12
	flex()
	justify-content: space-between
	
	// +landscape()
	// 	margin-top: col
	
	a
		display: inline-block
		
#work-in-progress
	grid-column: 2 / span 10
	margin-top: 1em
	padding-top: 2em
	padding-bottom: 2em
	border-top: 1px solid black
	text-align: left
	
	+square()
		text-align: center
	
	p
		max-width: none



	
