html, body
	width: 100vw
	height: 100vh
	overflow-x: scroll
	overflow-y: hidden
	background: white
	color: black
	font-size: 22px
	font-family: Cutive
	letter-spacing: -0.02em
	
body
	flexRow()
	align-items: flex-end
	
	p
		margin-top: 1em
	
header, footer
	flex-shrink: 0
	align-self: center
	
header
	width: calc(100vw - 100vh)
	padding: 0 5% 5% 5%
	
	h1
		font-family: Myeongjo
		font-weight: normal
		margin-bottom: 0.5em
		
footer
	width: calc(100vw - 100vh + 8%)
	padding: 0 5% 5% 5%
	padding-right: 15%
	
		
.book
	height: 100vh
	display: inline-block
	align-items: flex-end
	flex-shrink: 0
	
	img
		height: 100%
		
	+.a-format
		height: 90%
		
	+.b-format
		height: 93%