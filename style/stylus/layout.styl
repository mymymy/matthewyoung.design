html
	width: 100vw
	height: 100vh
	background: white
	color: black
	font-size: 22px
	font-family: Cutive
	letter-spacing: -0.02em
	
html body#home
	width: 100vw
	height: 100vh
	flexRow()
	align-items: flex-end
	overflow-x: scroll
	overflow-y: hidden
	
	@media (max-aspect-ratio: 1/1)
		flexColumn()
		overflow-x: hidden
		overflow-y: scroll
		padding: 5vw
		align-items: center
		text-align: center
	
p
	margin-top: 1em
	
h1
	font-family: Myeongjo
	font-weight: normal
	margin-bottom: 0.5em
	
	+below(500px)
		font-size: 1.6em
		
h2
	font-size: 1em
	font-weight: 400
	border-bottom: 1px solid
	display: inline-block
	margin-top: 2em
	
header, footer
	flex-shrink: 0
	align-self: center
	min-width: 600px
	
	+below(700px)
		min-width: 0
	
header
	width: calc(100vw - 100vh)
	padding: 0 5% 5% 5%
	
	+below(1500px)
		width: calc(100vw - 45vh)
		
		p
			max-width: 700px
			
	@media (max-aspect-ratio: 1/1)
		width: 100%
		margin: 4em auto 2em
		padding: 0
		
		p
			margin-left: auto
			margin-right: auto
			
p.links
	line-height: 150%
	
footer
	width: calc(100vw - 100vh + 8%)
	padding: 0 5% 5% 5%
	padding-right: 15%

	@media (max-aspect-ratio: 1/1)
		width: 100%	
		padding-right: 5%
		padding-bottom: 5em
		
.book
	height: 100vh
	display: inline-block
	align-items: flex-end
	flex-shrink: 0
	
	img
		height: 100%
		
	+.b-format
		height: 93%
		
	+.a-format
		height: 90%
		
	@media (max-aspect-ratio: 1/1)
		height: auto
		width: 90vw
		
		img
			width: 100%
			height: auto
			
		+.b-format
			width: 93%
			height: auto
			
		+.a-format
			width: 90%
			height: auto