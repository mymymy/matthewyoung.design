html
	width: 100vw
	height: 100vh
	background: white
	color: black
	font-size: 22px
	font-family: Cutive
	letter-spacing: -0.02em
	
	@media (max-height: 600px)
		font-size: 20px

	@media (max-height: 400px)
		font-size: 16px
	
	+below(500px)
		font-size: 20px

	+below(400px)
		font-size: 18px
	
html body#home
	width: 100vw
	height: 100vh
	flexRow()
	align-items: center
	overflow-x: scroll
	overflow-y: hidden
	
	@media (max-aspect-ratio: 1/1)
		flexColumn()
		overflow-x: hidden
		overflow-y: scroll
		padding: 5vw
		text-align: center
		
	+below(650px)
		text-align: left
	
p
	margin-top: 1em
	
h1
	font-family: Myeongjo
	font-weight: normal
	margin-bottom: 0.5em
	
	+below(500px)
		font-size: 1.6em
		
h2
	font-size: 1em
	font-weight: 400
	border-bottom: 1px solid
	display: inline-block
	margin-top: 2em
	
header, footer
	flex-shrink: 0
	align-self: center
	min-width: 600px
	padding: 10vh 5vw
	
	+below(700px)
		min-width: 0
		
	@media (min-aspect-ratio: 3/1)
		align-self: flex-end
	
header
	width: calc(100vw - 100vh)

	+below(1620px)
		width: calc(100vw - 45vh)
			
	@media (max-aspect-ratio: 1/1)
		width: 100%
		margin: 4em auto 2em
		padding: 0
		
		p
			margin-left: auto
			margin-right: auto
			
	@media (min-aspect-ratio: 3/1)
		width: auto
		margin-right: 5em
		
	p
		max-width: 820px
		
		@media (max-aspect-ratio: 1/1)
			max-width: 600px
		
		#more
			display: inline-block
			
p.links
	line-height: 150%
	margin-top: 1.2em

	@media (max-aspect-ratio: 1/1)
		a
			margin: 0 0.3em
			
			+below(650px)
				margin: 0 0.6em 0 0
		
		#break
			display: none
	
footer
	width: 100%
	max-width: calc(720px + 15% + 5vw)
	padding-right: 15vw

	@media (max-aspect-ratio: 1/1)
		width: 100%	
		padding-right: 5vw
		padding-bottom: 5em
		
.book
	height: 100vh
	max-height: 1200px
	display: flex
	align-items: center
	flex-shrink: 0
	
	aFormat = 90%
	bFormat = 93%
	demy = 96%
	royal = 100%
	
	img
		height: 100%
		
	+.b-format
		img
			height: bFormat
		
	+.a-format
		img
			height: aFormat
		
	@media (max-aspect-ratio: 1/1)
		height: auto
		width: 90vw
		
		img
			width: 100%
			height: auto
			
		+.b-format
			width: 93%
			height: auto
			
		+.a-format
			width: 90%
			height: auto