html, body
	width: 100vw

grid-12()
	display: grid
	grid-template-columns: repeat(12, 1fr)
	grid-gap: 10px
	
	+square()
		grid-gap: 1em
		
	justify-items: stretch
	align-items: stretch
	
col = calc((100vw - 13em) / 12)
			
body
	grid-12()
	width: 100%
	padding: 1em 5vw
	
	+landscape()
		padding: 1em 2em
	
	background: black
	color: white
	fontSmoothing()
	
header
	grid-column: 1 / span 12
	
figure img
	max-width: 100% // Make images width of div
	
	@media(min-height: 500px)
		max-height: 90vh // Make image no taller than screen, but only on screens taller than 500px