@import 'layout'

body.book

	figure
		grid-column: 2 / span 10
		grid-row: 2 / span 1
		
		+tall()
			flexColumn()
			
		+square()
			grid-column: 2 / span 10
		
		+landscape()
			grid-column: 5 / span 8
		
		img
			margin-right: 1em
			margin-bottom: 1em
			
			&:last-of-type
				margin-bottom: 0
			
		&.front-and-back
			grid-column: 1 / span 12
			flexRow()
			align-items: flex-start
			
			+square()
				grid-column: 2 / span 10
				
			+landscape()
				grid-column: 6 / span 7
				flexColumn()

			+wide()
				grid-column: 5 / span 8
				flexRow()
			
			img
				max-width: calc(50% - 0.5em)
				
				+landscape()
					max-width: 100% // single, stacking images
					
				+wide()
					max-width: calc(50% - 0.5em) // same as original max-width, above
					margin-bottom: 0
			
	figcaption
		grid-column: 1 / span 12
		grid-row: 3 / span 1
		margin-top: 2em
		font-size: 0.85em
		flexColumn()
		justify-content: space-between
		
		+square()
			grid-column: 2 / span 10
		
		+landscape()
			grid-column: 1 / span 5
			grid-row: 2 / span 1
			margin-top: 0
			margin-right: 2em
			
		+wide()
			grid-column: 1 / span 4
					
		dl
			margin-left: 1em
			line-height: 1.4em
						
		dt
			display: inline
			margin-left: -1em
			
			&::after
				content: ":"
				width: 0.4em
				display: inline-block
				
		dd
			display: inline
			margin: 0
			
		.see-also
			margin-top: 2em
			flexRow()
			align-items: flex-end
					
			.images
				flexRow()
				height: 5rem
				margin-right: 1em
				
				img
					max-height: 100%
					margin-right: 0.5em
					
					&:last-of-type
						margin-right: 0
				
			h4
				text-transform: none
				font-size: 1em
				letter-spacing: 0
				font-style: italic
			
	p + p
		margin-top: 0
		text-indent: 1em