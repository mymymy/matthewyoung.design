@import 'layout'

body.book

	figure
		grid-column: 1 / span 12
		grid-row: 2 / span 1
		overflow: scroll
		text-align: center
		
		+landscape()
			grid-column: 6 / span 7
			margin-top: -1em
			text-align: left
			
		img
			max-width: 80%
			
			+landscape()
				max-width: 100%
			
		&.front-and-back
			grid-column: 1 / span 12
			flexRow()
			align-items: flex-start
			
			+tall()
				width: 100vw
				margin-left: -5vw // based on body padding
				
			+landscape()
				grid-column: 6 / span 7
				flexColumn()

			+wide()
				grid-column: 5 / span 8
				flexRow()
			
			img
				margin-right: 1em
				max-width: calc(50% - 0.5em)
				
				+tall()
					max-width: 75%
					
					&:first-of-type
						margin-left: 12%
						
					&:last-of-type
						max-width: 87% // width + padding
						padding-right: 12%
				
				+landscape()
					max-width: 100% // single, stacking images
					margin-bottom: 1em
					
					&:last-of-type
						margin-bottom: 0
					
				+wide()
					max-width: calc(50% - 0.5em) // same as original max-width, above
					margin-bottom: 0
			
	figcaption
		grid-column: 1 / span 12
		grid-row: 3 / span 1
		margin-top: 2em
		font-size: 0.85em
		flexColumn()
		justify-content: space-between
		max-width: 30em
		
		+landscape()
			grid-column: 1 / span 5
			grid-row: 2 / span 1
			margin-top: 0
			margin-right: 2em
			position: sticky
			
		+wide()
			grid-column: 1 / span 4
			
		dl
			margin-left: 1em
			line-height: 1.4em
						
		dt
			display: inline
			margin-left: -1em
			
			&::after
				content: ":"
				width: 0.4em
				display: inline-block
				
		dd
			display: inline
			margin: 0
			
		figcaption // figcaption within figcaption (prevent font size getting smaller)
			font-size: 1em
			
		.see-also
			margin-top: 2em
			flexRow()
			align-items: flex-end
					
			.image, .images
				flexRow()
				height: 5rem
				margin-right: 1em
				
				img
					max-height: 100%
					margin-right: 0.5em
					
					&:last-of-type
						margin-right: 0
				
			h4
				text-transform: none
				font-size: 1em
				letter-spacing: 0
				font-style: italic
			
	p + p
		margin-top: 0
		text-indent: 1em