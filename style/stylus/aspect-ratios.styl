// NB: Aspect ratio can only accept integers. Can't parse '1.8:1' for example.

// < 0.7
// This is a 'max', all the others are 'min'. This value should be the same as the 'portrait' value.
tall()
	@media (max-aspect-ratio: 6/10)
		{block}

// > 0.7
portrait()
	@media (min-aspect-ratio: 6/10)
		{block}

// > 0.9
square()
	@media (min-aspect-ratio: 9/10) and (min-height: 500px)
		{block}
		
// > 1.2
landscape()
	@media(min-aspect-ratio: 105/100) and (min-height: 500px)
		{block}
		
// > 1.5
wide()
	@media(min-aspect-ratio: 3/2) and (min-height: 500px)
		{block}

// > 1.777
wider()
	@media(min-aspect-ratio: 16/9) and (min-height: 500px)
		{block}

// > 2
widest()
	@media(min-aspect-ratio: 2/1) and (min-height: 500px)
		{block}
		
high()
	@media (min-height: 1200px) and (min-aspect-ratio: 1/1)
		{block}
		
