@import 'aspect-ratios'

#statistics-without-tears
		
	#new-cover
		grid-column: 2 / span 10

		+landscape()
			grid-column: 5 / span 4
			
	#old-cover
		grid-column: 2 / span 6
		grid-row: 4 / span 1
		margin: 2em 0
		
		+square()
			grid-column: 2 / span 4
			
		+landscape()
			grid-column: 9 / span 2
			grid-row: 2 / span 1
			margin-top: 0
			margin-bottom: 0