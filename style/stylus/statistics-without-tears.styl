@import 'aspect-ratios'
@import 'flexbox'

#statistics-without-tears
	
	#new-cover
		+landscape()
			grid-column: 6 / span 4
			margin-right: 1em
			
	#old-cover
		grid-row: 4 / span 1
		grid-column: 1 / span 12
		width: 100%
		align-self: flex-end
		
		+landscape()
			grid-row: 2 / span 1
			grid-column: 10 / span 3
		
		figure
			flexRow()
			align-items: flex-end !important
			margin-top: 1em
			min-height: auto
		
		img
			max-height: 200px !important
			margin-right: 0.5em