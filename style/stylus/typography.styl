CrimsonText = 'Crimson Text', serif

html, body
	font-size: 24px
	font-family: CrimsonText

uppercase()
	text-transform: uppercase
	letter-spacing: 0.1em
	
smallcaps()
	uppercase()
	font-size: 0.8em
	
fontSmoothing()
	-moz-osx-font-smoothing: grayscale
	-webkit-font-smoothing: antialiased
	
a
	text-decoration: none
	border-bottom: 1px solid
	
	&.button
		margin: 1em
	
h1, h2, h3, h4
	margin: 0
	font-size: 1.2em
	font-weight: normal
	fontSmoothing()

	+ p, + ul, + ol, + dl
		margin-top: 1em
		
h4
	smallcaps()
	
p, ul, ol, dl
	+ p, + ul, + ol, + dl
		margin-top: 1em
		
li, dd
	margin-bottom: 0.2em