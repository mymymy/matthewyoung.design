CrimsonText = 'Crimson Text', serif
System = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";

html, body
	font-family: CrimsonText
	font-size: 24px
	line-height: 1.3
	
	+below(500px)
		font-size: 22px

uppercase()
	text-transform: uppercase
	letter-spacing: 0.1em
	
smallcaps()
	uppercase()
	font-size: 0.8em
	
fontSmoothing()
	-moz-osx-font-smoothing: grayscale
	-webkit-font-smoothing: antialiased
	
a
	text-decoration: none
	border-bottom: 1px solid
	
	&.button
		margin: 1em
	
h1, h2, h3, h4
	margin: 0
	font-size: 1.2rem
	font-weight: normal
	line-height: 1.2
	fontSmoothing()
	
	+below(500px)
		font-size: 1.1rem

	+ p, + ul, + ol, + dl
		margin-top: 1em
		
h4
	font-size: 1em
	opacity: 0.5
	
p, ul, ol, dl
	max-width: 24em
	
	+ p, + ul, + ol, + dl
		margin-top: 1em
		
p
	+ h1, + h2, + h3, + h4, + h5
		margin-top: 1em
		
li, dd
	margin-bottom: 0.2em
	
.italic
	font-style: italic