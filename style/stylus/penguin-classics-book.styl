@import 'aspect-ratios'
@import 'layout'
@import 'flexbox'

#penguin-classics-book
	
	h1, h3, h4, h5, p, ul, li, aside, img, section, video
		grid-column: 1 / span 12
	
	#title
		grid-column: 1 / span 12
	
	img
		grid-column: 1 / span 12
		max-width: 120%
		margin: 12vh auto
		margin-left: -10%
		
		+square()
			max-width: 100%
			margin: 2em auto
		
		&#front
			width: 180%
			max-width: none
			margin-left: -40%
			
			+square()
				width: auto
				max-width: 100%
				margin: 2em auto